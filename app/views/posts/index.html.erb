<table class="table">

    <%= link_to "Dashboard", posts_dashboard_path %>

    <tr>
        <th>Title</th>
        <th>Created_at</th>
        <th>Image_url</th>
        <th>Content</th>
    </tr>

    <% @posts.each do |post| %>
        <tr>
            <td><%= post.title %></td>
            <td><%= post.created_at %></td>
            <td><%= image_path post.image_url %><img style="width:100px; height:100px; float:right " src="<%= post.image_url %>" ></td>
            <td><%= post.content %></td>
        </tr>

    <% end %>
</table>
